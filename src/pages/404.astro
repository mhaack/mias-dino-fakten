---
import { profileConfig } from '@/config'
import I18nKey from '@i18n/i18nKey'
import { i18n } from '@i18n/translation'
import type { GetStaticPaths } from 'astro'
import PostPage from '../components/PostPage.astro'
import MainGridLayout from '../layouts/MainGridLayout.astro'
---

<MainGridLayout title={i18n(I18nKey.notFoundHeading)} description={i18n(I18nKey.notFoundDescription)}>
  <div class={"card-base p-3 mb-4"}>
    <div class="px-2 text-center">
        <h1 class="font-bold mb-1 text-3xl md:text-[2.5rem]/[2.75rem] text-black/90 dark:text-white/90">{i18n(I18nKey.notFoundHeading)}</h1>
        <div class="h-1 w-10 bg-[var(--primary)] mx-auto rounded-full mb-2"></div>
        <div class="text-neutral-400 mb-2">{i18n(I18nKey.notFoundDescription)}</div>
    </div>
  </div>
  {/* <div class={"card-base p-3 mb-4"}>
    <h2 class="font-bold text-2xl text-center text-black/90 dark:text-white/90">{i18n(I18nKey.dinosNew)}</h2>
  </div> */}
  
</MainGridLayout>